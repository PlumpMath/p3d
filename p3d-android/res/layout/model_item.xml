<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gallery_item_bg_w256"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/model_item_img"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="@dimen/model_item_width"
            android:layout_height="@dimen/model_item_width"
            android:contentDescription="@android:string/untitled"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/model_item_name"
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="#04a4d6"
            android:textSize="15sp"
            android:text="Name"
            >
        </TextView>

        <TextView
            android:id="@+id/model_item_author"
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="by Author"
            android:textColor="#04a4d6"
            android:textSize="12sp" >

        </TextView>
        <TextView
            android:id="@+id/model_item_views"
            android:layout_width="fill_parent"
            android:layout_height="17dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="1234"
            android:textColor="#232323"
            android:textSize="10sp" >
        </TextView>
        </LinearLayout>

</RelativeLayout>